/**index.wxss**/
/* 轮播图样式 */
.swiper-wrapper {
    width: 100%;
    height: 150px;
}

.swiper {
    width: 100%;
    height: 150px;
}

.slide-image {
    display: inline-block;
    width: 100%;
    height: 100%;
}

/* 电台样式 */
.broadcasting {
    margin: 14rpx 20rpx;
    width: calc(100% - 40rpx);
}

.broadcasting-title {
    width: 100%;
    font-size: 32rpxx;
    color: #000;
    margin-bottom: 22rpx;
    font-weight: normal;
}

.broadcasting-body {
    height: 440rpx;
    display: flex;
    justify-content: space-between;
}

.broadcasting-item {
    position: relative;
    display: flex;
    width: 49%;
    height: auto;
    background: #fff;
}

.broadcasting-image {
    flex: 1;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 346rpx;
}

.broadcasting-item text {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 28rpx;
}

.icon {
    position: absolute;
    height: 48rpx;
    bottom: 110rpx;
    right: 18rpx;
    width: 48rpx;
    z-index: 10;
    color: #fff;
    font-size: 54rpx;
}

/* 底部样式 */
.footer {
    position: absolute;
    bottom: 20rpx;
    left: 50%;
    margin-left: -82rpx;
    display: block;
    width: 164rpx;
    height: 48rpx;
}

.footer image {
    display: block;
    width: 100%;
    height: 100%;
}

