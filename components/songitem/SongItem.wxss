/* components/SongItem.wxss */
.song-item {
    display: flex;
    justify-content: space-between;
    background-color: #fff;
    margin-bottom: 5px;
}

.item-img {
    width: 80px;
    height: 80px;
    margin-right: 10px;
}

.songname, .singername {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.songname {
    font-size: 16px;
    color: #000;
}

.singername {
    font-size: 14px;
    color: #999;
}

.item-right {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}

.songurl {
    display: none;
}

.item-right-btn {
    display: flex;
    flex-direction: column;
    justify-content: center;
    color: #999;
}

.arrow {
    margin-right: 5px;
    width: 6px;
    height: 6px;
    border-right: 1px solid #b2b2b2;
    border-bottom: 1px solid #b2b2b2;
    transform: rotate(-45deg);
    -webkit-transform: rotate(-45deg);
}